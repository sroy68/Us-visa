{
  "manifest_version": 3,
  "name": "US Visa Slot Tracker",
  "version": "4.0",
  "description": "Real-time US visa slot monitoring",
  "permissions": ["storage", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Visa Slots LIVE"
  },
  "background": {
    "service_worker": "background.js"
  }
}
